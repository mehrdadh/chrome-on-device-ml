<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.chrome.device.ml">

  <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/ch_ml_app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name="org.chrome.device.ml.ChromeActivity"
      android:launchMode="singleTask"
      android:label="@string/ch_ml_app_name"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="org.chrome.device.ml.chrome.CustomTabActivity"
      android:launchMode="standard"
      android:label="Customized UI Chrome Custom Tab"
      android:parentActivityName="org.chrome.device.ml.ChromeActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="org.chrome.device.ml.ChromeActivity" />
    </activity>

    <service
      android:name="org.chrome.device.ml.service.MLService"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/ml_service_label"
      android:process="@string/ml_service_process"
      android:enabled="true"
      android:exported="true"
    > </service>

    <service
        android:name="org.chrome.device.ml.service.MLServiceBackground"
        android:permission="android.permission.BIND_JOB_SERVICE"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/ml_service_back_label"
        android:process="@string/ml_service_back_process"
        android:exported="false"
    > </service>

  </application>

</manifest>